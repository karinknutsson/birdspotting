<div class="white-auto-container">
    <div class="form-container padding-16">
        <h3>Log in</h3>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :login,
                        required: true,
                        label: false,
                        input_html: { autocomplete: "email", placeholder: "email or username" } %>
            <%= f.input :password,
                        required: true,
                        label: false,
                        input_html: { autocomplete: "current-password", placeholder: "password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions margin-top-40">
            <%= f.button :submit, "Submit", class: "btn-bird btn-oblong btn-gold" %>
          </div>

          <span class="float-right margin-top-40 margin-bottom-16 semi-bold">
            <%= render "devise/shared/links"%>
          </span>
        <% end %>

    </div>
</div>
