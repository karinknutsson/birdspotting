<div class="white-auto-container">
    <div class="padding-16">
        <h3>Sign up</h3>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        label: false,
                        input_html: { autocomplete: "email", placeholder: "email" } %>
            <%= f.input :username,
                        required: true,
                        label: false,
                        input_html: { placeholder: "username" } %>
            <%= f.input :password,
                        required: true,
                        label: false,
                        input_html: { placeholder: "password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        input_html: { placeholder: "password confirmation" } %>
          </div>

          <div class="form-actions margin-top-40 margin-bottom-16">
            <%= f.button :submit, "Submit", class: "btn-bird btn-oblong btn-gold" %>
          </div>

        <% end %>

    </div>
</div>

