      <div class="login-container">

        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        label: false,
                        input_html: { autocomplete: "email", placeholder: "email" } %>
            <%= f.input :username,
                        required: true,
                        label: false,
                        input_html: { placeholder: "username" } %>
            <%= f.input :password,
                        required: true,
                        label: false,
                        input_html: { placeholder: "password (6 characters minimum)" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        input_html: { placeholder: "password confirmation" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-submit btn-red btn-fill" %>
          </div>

          <span class="float-right" style="margin-top: 32px">
            <%= render "devise/shared/links"%>
          </span>
        <% end %>

      </div>
