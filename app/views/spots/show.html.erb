      <div class="spot-container">

        <div class="map-container">
          <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
        </div>

        </div>

        <div class="spot-content">
          <h5>
            <% if @spot.number == 1 %>
              One <%= link_to @spot.bird.name.downcase, bird_path(@spot.bird_id) %> spotted on <%= @spot.spot_date %>
            <% else %>
              <%= @spot.number %> <%= link_to "#{@spot.bird.name.downcase}s", bird_path(@spot.bird_id) %> spotted on <%= @spot.spot_date %>
            <% end %>
          </h5>
          <h6><%= @spot.bird.latin_name %></h6>

          <p>
            <%= @spot.note %>
          </p>
        </div>

        <div class="spot-thumbnails">
          <% if @spot.photos.attached? %>
            <% @spot.photos.each_with_index do |photo, index| %>
              <div class="spot-thumb">
                <%= link_to cl_image_tag(photo.key), "#", data: {toggle: "modal", target: "#spotPicModal#{index}"} %>
              </div>
            <% end %>
          <% end %>
        </div>

        <% if @spot.photos.attached? %>
            <% @spot.photos.each_with_index do |photo, index| %>
              <div id="spotPicModal#{index}" class="modal" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="spot-pic-content">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <%= cl_image_tag(photo.key, crop: "fill") %>
                </div>
              </div>
          <% end %>
        <% end %>

      </div>
