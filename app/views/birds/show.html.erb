      <div class="bird-container">

        <div class="bird-content">
          <div class="bird-img" style="float: right">
            <% if @bird.image.attached? %>
              <%= cl_image_tag(@bird.image.key) %>
              <p><%= @bird.credit %></p>
            <% else %>
              <%= image_tag "avatar_default.png" %>
            <% end %>
          </div>

          <h5><%= @bird.name %></h5>
          <h6>
            <%= @bird.latin_name %>
          </h6>
          <p>
            <%= @bird.description %>
          </p>

          <div class="birdmap-container">
            <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"></div>
          </div>
        </div>

      </div>
