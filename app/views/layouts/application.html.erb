<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SPOT THE BIRD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'map' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>

    <%= render 'shared/navbar' if user_signed_in? %>

    <% if !user_signed_in? %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-0 col-sm-0 col-md-1"></div>
                <div class="col-12 col-sm-12 col-md-10">
                    <div class="home-logo">
                        <%= link_to root_path do %>
                            <%= render "shared/logo" %>
                        <% end %>
                    </div>
                </div>
                <div class="col-0 col-sm-0 col-md-1"></div>
            </div>
        </div>
    <% end %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-0 col-sm-0 col-md-1"></div>
            <div class="col-0 col-sm-12 col-md-10">
                <div class="border-container center-flex">
                    <%= yield %>
                </div>
            </div>
            <div class="col-0 col-sm-0 col-md-1"></div>
        </div>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <div class="footer center-flex">
      <ul>
        <li><a href="#">ABOUT</a></li>
        <li><a href="#">DATA POLICY</a></li>
        <li><a href="#">GET INVOLVED</a></li>
      </ul>
    </div>

    <%= javascript_pack_tag 'map' %>

  </body>
</html>
